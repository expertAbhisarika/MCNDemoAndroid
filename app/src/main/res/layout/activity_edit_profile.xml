<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.EditProfile.EditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color"></RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="137dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ed" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="63dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:layout_marginTop="200dp"
            android:text="Edit Details"
            android:textColor="#010b13"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_below="@+id/text"
            android:layout_marginTop="64dp"
            android:background="@drawable/text_round"
            android:drawablePadding="15dp"
            android:hint="username"
            android:maxLines="1"
            android:drawableLeft="@drawable/user"
            android:layout_centerHorizontal="true"
            android:textColor="#00090f"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit2"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_below="@+id/edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/text_round"
            android:drawablePadding="15dp"
            android:maxLines="1"
            android:hint="Email address"
            android:drawableLeft="@drawable/em"
            android:textColor="#00090f"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit3"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:layout_below="@+id/edit2"
            android:background="@drawable/text_round"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/cell"
            android:layout_marginTop="18dp"
            android:hint="Mobile No."
            android:textColor="#00090f"
            android:maxLines="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_round"
            android:onClick="callSave"
            android:text="Save"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>